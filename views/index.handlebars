<div class="container">
  <form method="POST" action="/">
    <div class="row">
      <div class="box col-4">
        <div class="box-top"
          style="background-image: url(https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg);">
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="options" id="engineer" value="engineer">
          <label class="form-check-label" for="engineer">工程師</label>
        </div>
      </div>
      <div class="box col-4">
        <div class="box-top box2"
          style="background-image: url(https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg);">
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="options" id="designer" value="designer">
          <label class="form-check-label" for="designer">設計師</label>
        </div>
      </div>
      <div class="box col-4">
        <div class="box-top"
          style="background-image: url(https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg);">
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="options" id="entrepreneur" value="entrepreneur">
          <label class="form-check-label" for="entrepreneur">創業家</label>
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-outline-secondary">Generator!</button>
  </form>
  <div class="form-control">
    {{results}}
  </div>
</div>